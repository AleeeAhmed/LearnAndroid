<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@drawable/back"
    android:padding="11dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ToastMessageLibrary">

    <RelativeLayout
        android:id="@+id/RL_ToastLibrary"
        android:padding="11dp"
        android:background="@color/colorBlackTransparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDescLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Using this library you can show attractive toast messages in your android app."
            android:layout_below="@+id/tvDescLabel"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/tvCodeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/code"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/tvDesc"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:id="@+id/tvStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step_1"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/tvCodeLabel"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:id="@+id/tvDescStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add this in your project level build.gradle"
            android:layout_below="@+id/tvStep1"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/ivCodeToastLibraryStep1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/tvDescStep1"
            android:src="@drawable/toast_lib_step1"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="7dp"
            />


        <TextView
            android:id="@+id/tvStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step_2"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/ivCodeToastLibraryStep1"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:id="@+id/tvDescStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paste the below code in your app level build.gradle."
            android:layout_below="@+id/tvStep2"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/ivCodeToastLibraryStep2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/tvDescStep2"
            android:src="@drawable/toast_lib_step2"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="7dp"
            />



        <TextView
            android:id="@+id/tvStep3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step_3"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/ivCodeToastLibraryStep2"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:id="@+id/tvDescStep3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In .java class add different Toasts as follow."
            android:layout_below="@+id/tvStep3"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/ivCodeToastLibraryStep3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tvDescStep3"
            android:src="@drawable/toast_lib_step3"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:id="@+id/tvStep4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step_4"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/ivCodeToastLibraryStep3"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:id="@+id/tvDescStep4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(OPTIONAL) if you want to set your custom colors to Toasts."
            android:layout_below="@+id/tvStep4"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/ivCodeToastLibraryStep4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tvDescStep4"
            android:src="@drawable/toast_lib_step4"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="7dp"
            />


        <info.hoang8f.widget.FButton
            android:id="@+id/btnDemoToastLibrary1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Success Toast"
            android:textAllCaps="false"
            android:padding="11dp"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/ivCodeToastLibraryStep4"
            android:layout_marginTop="17dp"
            />


        <info.hoang8f.widget.FButton
            android:id="@+id/btnDemoToastLibrary2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error Toast"
            android:textAllCaps="false"
            android:padding="11dp"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/btnDemoToastLibrary1"
            android:layout_marginTop="17dp"
            />


        <info.hoang8f.widget.FButton
            android:id="@+id/btnDemoToastLibrary3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info Toast"
            android:textAllCaps="false"
            android:padding="11dp"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/btnDemoToastLibrary2"
            android:layout_marginTop="17dp"
            />

    </RelativeLayout>

</ScrollView>