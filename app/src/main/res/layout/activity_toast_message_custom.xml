<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ToastMessageCustom"
    android:background="@color/colorWhite"
    android:padding="11dp"
    >


    <Button
        android:id="@+id/btnCustomToastMessagePosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:padding="11dp"
        android:background="@color/colorBlack"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:text="Toast Message at Custom Position"
        android:layout_marginTop="17dp"
        />



    <Button
        android:id="@+id/btnCustomToastMessageImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:padding="11dp"
        android:background="@color/colorBlack"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:text="Toast Message with Image"
        android:layout_below="@+id/btnCustomToastMessagePosition"
        android:layout_marginTop="17dp"
        />




</RelativeLayout>