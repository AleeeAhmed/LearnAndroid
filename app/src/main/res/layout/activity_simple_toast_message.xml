<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ToastMessageSimple"
    android:padding="11dp"
    android:background="@color/colorWhite"
    >

    <TextView
        android:id="@+id/tvDescLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast message is used to display a simple message to user at the bottom of screen. e.g. at login time you can show \''Login Successfully\'' toast."
        android:layout_below="@+id/tvDescLabel"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:id="@+id/tvCodeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/code"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_below="@+id/tvDesc"
        android:layout_marginTop="3dp"
        />


    <ImageView
        android:id="@+id/ivCodeSimpleToast"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tvCodeLabel"
        android:src="@drawable/simple_toast"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"/>


    <Button
        android:id="@+id/btnDemoSimpleToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demo"
        android:textAllCaps="false"
        android:padding="11dp"
        android:background="@color/colorBlack"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_below="@+id/ivCodeSimpleToast"
        android:layout_marginTop="7dp"

        />





</RelativeLayout>