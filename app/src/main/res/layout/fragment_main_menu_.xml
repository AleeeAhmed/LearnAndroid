<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/RL_MainMenu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Frag_MainMenu"
    android:background="@drawable/back"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/cvMainMenu"
        >

        <ScrollView
            android:id="@+id/rr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            android:padding="11dp"
            android:background="#20000000"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardAlertDialog"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="3dp"
                    android:padding="11dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    >

                    <TextView
                        android:id="@+id/btnAlertDialogs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alert Dialog"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:padding="11dp"
                        android:layout_gravity="center"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardToasts"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="3dp"
                    android:padding="11dp"
                    android:layout_marginStart="7dp"
                    android:layout_alignBaseline="@id/cardAlertDialog"
                    android:layout_toEndOf="@id/cardAlertDialog"
                    app:cardBackgroundColor="@color/colorAccent"
                    >

                    <TextView
                        android:id="@+id/btnToasts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toasts"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:padding="11dp"
                        android:layout_gravity="center"
                        />

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/cardSnackBar"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="3dp"
                    android:padding="11dp"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/cardAlertDialog"
                    app:cardBackgroundColor="@color/colorAccent"
                    >

                    <TextView
                        android:id="@+id/btnSnackBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Snackbar"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:padding="11dp"
                        android:layout_gravity="center"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardFAB"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="3dp"
                    android:padding="11dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/cardAlertDialog"
                    android:layout_alignBaseline="@id/cardAlertDialog"
                    android:layout_toEndOf="@id/cardAlertDialog"
                    app:cardBackgroundColor="@color/colorAccent"
                    >

                    <TextView
                        android:id="@+id/btnFAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAB"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:padding="11dp"
                        android:layout_gravity="center"
                        />

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/cardBackgroundTasks"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="3dp"
                    android:padding="11dp"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/cardSnackBar"
                    app:cardBackgroundColor="@color/colorAccent"
                    >

                    <TextView
                        android:id="@+id/btnAsyncTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Background Tasks"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:padding="11dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardExtras"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="3dp"
                    android:padding="11dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/cardSnackBar"
                    android:layout_alignBaseline="@id/cardAlertDialog"
                    android:layout_toEndOf="@id/cardAlertDialog"
                    app:cardBackgroundColor="@color/colorAccent"
                    >

                    <TextView
                        android:id="@+id/btnExtras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extras"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:padding="11dp"
                        android:layout_gravity="center"
                        />

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/cardPopUpMenu"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="3dp"
                    android:padding="11dp"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/cardBackgroundTasks"
                    app:cardBackgroundColor="@color/colorAccent"
                    >

                    <TextView
                        android:id="@+id/btnPopUpMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popup Menu"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:padding="11dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardToolbar"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="3dp"
                    android:padding="11dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/cardBackgroundTasks"
                    android:layout_alignBaseline="@id/cardAlertDialog"
                    android:layout_toEndOf="@id/cardAlertDialog"
                    app:cardBackgroundColor="@color/colorAccent"
                    >

                    <TextView
                        android:id="@+id/btnToolbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toolbar"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:padding="11dp"
                        android:layout_gravity="center"
                        />

                </android.support.v7.widget.CardView>



            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cvMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="7dp"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/tvViewZoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="*click on image to zoom it."
                />

            <TextView
                android:id="@+id/tvCopyCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorWhite"
                android:text="*press and hold on image to copy its code."
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>