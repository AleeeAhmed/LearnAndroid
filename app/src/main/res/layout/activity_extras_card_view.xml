<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:padding="11dp"
    android:background="@drawable/back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ExtrasCardView">

    <RelativeLayout
        android:id="@+id/RL_ExtrasCardView"
        android:padding="11dp"
        android:background="@color/colorBlackTransparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDescLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:text="@string/description"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card View is used with Lists to present data beautifully in cards."
            android:layout_below="@+id/tvDescLabel"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/tvCodeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/code"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/tvDesc"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:id="@+id/tvStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step_1"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/tvCodeLabel"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:id="@+id/tvDescStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add this dependent to app level build.gradle"
            android:layout_below="@+id/tvStep1"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorWhite"
            />

        <ImageView
            android:id="@+id/ivCodeCardViewStep1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/tvDescStep1"
            android:src="@drawable/cardview_step1"
            android:contentDescription="@string/app_name"
            />


        <TextView
            android:id="@+id/tvStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step_2"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/ivCodeCardViewStep1"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:id="@+id/tvDescStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create row for you layout as follow."
            android:layout_below="@+id/tvStep2"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorWhite"
            />

        <ImageView
            android:id="@+id/ivCodeCardViewStep2"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/tvDescStep2"
            android:src="@drawable/cardview_step2"
            android:contentDescription="@string/app_name"
            />


    </RelativeLayout>

</ScrollView>