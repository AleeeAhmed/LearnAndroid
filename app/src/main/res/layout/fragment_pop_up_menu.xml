<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Frag_PopUpMenu"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btnButtonPopUpMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On Button\\Image Click"
            android:textAllCaps="false"
            android:padding="11dp"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginTop="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            />


        <Button
            android:id="@+id/btnToolbarPopUpMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On Toolbar"
            android:textAllCaps="false"
            android:padding="11dp"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/btnButtonPopUpMenu"
            android:layout_marginTop="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"

            />


    </RelativeLayout>
</ScrollView>