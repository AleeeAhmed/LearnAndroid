<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PopUpMenuButtonImage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:gravity="center_horizontal"
        android:background="@color/colorWhite"
        >

        <TextView
            android:id="@+id/tvDescLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="if you want to to have pop up menu on any image or button, you can apply this code."
            android:layout_below="@+id/tvDescLabel"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tvCodeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/code"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_below="@+id/tvDesc"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:id="@+id/tvDescStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Pop up Menu items like this."
            android:layout_below="@+id/tvCodeLabel"
            android:textColor="@color/colorBlack"
            />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/ivCodePopupButtonImageStep1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/tvDescStep1"
            android:src="@drawable/popup_menu_gif"
            android:contentDescription="@string/app_name"
            />


        <TextView
            android:id="@+id/tvDescStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add this to menu file."
            android:layout_below="@+id/ivCodePopupButtonImageStep1"
            android:textColor="@color/colorBlack"
            />

        <ImageView
            android:id="@+id/ivCodePopupButtonImageStep2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/tvDescStep2"
            android:src="@drawable/pop_up_menu_xml"
            android:contentDescription="@string/app_name"
            />


        <TextView
            android:id="@+id/tvDescStep3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add this to java file in OnClick method of Button or ImageView."
            android:layout_below="@+id/ivCodePopupButtonImageStep2"
            android:textColor="@color/colorBlack"
            />

        <ImageView
            android:id="@+id/ivCodePopupButtonImageStep3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/tvDescStep3"
            android:src="@drawable/pop_up_menu_java"
            android:contentDescription="@string/app_name"
            />


        <info.hoang8f.widget.FButton
            android:id="@+id/btnDemoPopupButtonImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demo"
            android:textAllCaps="false"
            android:padding="11dp"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_below="@+id/ivCodePopupButtonImageStep3"
            android:layout_marginTop="17dp"
            />


    </RelativeLayout>

</ScrollView>